<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat">
        <item name="android:background">@color/colorToolbar</item>
        <item name="android:textColorPrimary">@color/colorToolbarTitle</item>
        <item name="android:textColorSecondary">@color/colorToolbarTitle</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/toolbar_title_size</item>
    </style>

    <style name="FavImageLarge">
        <item name="android:layout_width">@dimen/fav_large_image</item>
        <item name="android:layout_height">@dimen/fav_large_image</item>
        <item name="android:background">@drawable/dw_rounded_corners_white</item>
    </style>

    <style name="FavImageSmall">
        <item name="android:layout_width">@dimen/fav_small_image</item>
        <item name="android:layout_height">@dimen/fav_small_image</item>
        <item name="android:layout_marginBottom">@dimen/space_s</item>
        <item name="android:background">@drawable/dw_rounded_corners_white</item>
    </style>

    <style name="TextEmptyTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_xxlarge</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">@dimen/space_m</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:textSize">@dimen/text_xl</item>
    </style>

    <style name="TextEmptySubtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_xxlarge</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">@dimen/space_m</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text_m</item>
    </style>

    <style name="ImageEmpty">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_xxlarge</item>
    </style>

    <style name="LinerLayoutEmpty">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray_50</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Favorite -->

    <style name="TextEmptyFavTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">@dimen/space_m</item>
        <item name="android:maxLines">@integer/maxLines</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/text_xs</item>
    </style>

    <style name="BtnFavCreate">
        <item name="android:background">@drawable/button_rounded</item>
        <item name="android:textSize">@dimen/text_s</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="CustomFavIcon">
        <item name="android:layout_width">@dimen/size_medium</item>
        <item name="android:layout_height">@dimen/size_medium</item>
        <item name="android:layout_gravity">top|right</item>
        <item name="android:layout_marginTop">@dimen/margin_compact</item>
        <item name="android:layout_marginRight">@dimen/margin_xlarge</item>
        <item name="android:background">@drawable/dw_rounded_favorite</item>
    </style>

    <style name="TextCountFavorites">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_xxxlarge</item>
        <item name="android:layout_marginTop">@dimen/margin_xhuge</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:lineSpacingExtra">@dimen/space_l</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_l</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
