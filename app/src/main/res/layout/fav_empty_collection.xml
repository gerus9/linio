<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fav_empty_collection"
    android:background="@color/purple"
    android:orientation="horizontal">

    <com.gerus.linio.customviews.CollectionFavorites
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:cf_default="true"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/space_s"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:text="@string/emptyCollection"
            style="@style/TextEmptyFavTitle" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_mid">

            <Button
                android:id="@+id/btnCreateCollection"
                android:text="@string/createNewCollection"
                style="@style/BtnFavCreate" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>