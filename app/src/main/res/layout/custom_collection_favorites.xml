<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnrCollections"
    android:layout_width="@dimen/fav_container_width"
    android:layout_height="@dimen/fav_container_height"
    android:background="@drawable/dw_rounded_corners"
    android:orientation="horizontal"
    android:padding="@dimen/space_xl">

    <ImageView
        android:id="@+id/imgFavLarge"
        style="@style/FavImageLarge"
        android:src="@mipmap/favorite_placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/space_s"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgFavSmall1"
            style="@style/FavImageSmall"
            android:src="@mipmap/favorite_placeholder" />

        <ImageView
            android:id="@+id/imgFavSmall2"
            style="@style/FavImageSmall"
            android:src="@mipmap/favorite_placeholder" />

    </LinearLayout>

</LinearLayout>